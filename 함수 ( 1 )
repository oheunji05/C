#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int main ()
{
  //두 숫자의 합을 구하는 함수

  int add(int a, int b) {
  	return a + b;
  }
  int main() {
  	printf("두 숫자의 합 : %d\n", add(3, 5));
  	return 0;
  }
/////////////////////////////////////////////////////////////////////////////////////

  //두 숫자의 사칙연산 함수
  int add(int a, int b);//함수 선언 
  int sub(int a, int b);
  int mul(int a, int b);
  double div1(int a, int b);
  
  int a, b;
	scanf("%d %d", &a, &b);
	printf("두 숫자의 합 : %d\n", add(a, b));
	printf("두 숫자의 차 : %d\n", sub(a, b));
	printf("두 숫자의 곱 : %d\n", mul(a, b));
	printf("두 숫자의 제 : %lf\n", div1(a, b));
	return 0;
  }

  int add(int a, int b) {//함수 정의 
  	return a + b;
  }
  
  int sub(int a, int b) {
  	return a - b;
  }

  int mul(int a, int b) {
  	return a * b;
  }
  
  double div1(int a, int b) {
  	if (b == 0) exit(0);
  	return (double) a / b;
  }
}
