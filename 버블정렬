#include <stdio.h>
int main (){
	
	int arr[5]={13,2,9,7,4};
	int cnt =0;
	
	for (int i =0;i<5;i++){
		printf("%3d",arr[i]);
	}
	printf("\n");
	
	
	for(int i=0;i<4;i++){
		for(int j=0;j<4-i;j++){
    
			if (arr[j] > arr[j+1]){
				cnt++;
				int temp = arr[j];
				arr[j]=arr[j+1];
				arr[j+1]=temp;
      }
      
		}
    
  	if (cnt ==0){
			break;
		}
    
		else {
			cnt =0;
		}
    
	}
	
	for (int i =0;i<5;i++){
		printf("%3d",arr[i]);
	}

	return 0;
}
