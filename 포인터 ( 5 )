#define _CRT_NO_WARNINGS
#include <stdio.h>
int main (){

	
	int arr[3]={0,1,2};
	int* p; //포인터는 주소를 저장하라고 있다  
	p=arr; //배열의 이름 arr은 주소 
	printf("arr의 주소 : %p\n",arr);
	printf("%d %d %d\n",arr[0],arr[1],arr[2]);
  printf("%d %d %d\n",p[0],p[1],p[2]);
  printf("%d %d %d\n",*p,*(p+1),*(p+2)); 

	return 0;
}
