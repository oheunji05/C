#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int main (){
	
	//n명 학생의 성적을 입력받아 평균 점수를 
	//소수점 둘째자리까지 나타내주는 프로그램
	
	int arr[1000],pe,add=0; 
	double add=0,aver;
	
	scanf("%d",&pe);
	
    for (int i=0;i<pe;i++){
    	scanf("%d",&arr[i]);
    	add=add+arr[i];
	}
	
	aver=add/pe;
	
	printf("평균 : %.2lf",aver);
	
	return 0;
}
