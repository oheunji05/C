#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int main(){

	 //4개의 정수를 입력받아 홀수 번째 입력받은 정수의 합과 짝수 번째 입력받은 정수의 합을 출력 
	 
	 int arr[3],odd=0,even=0;
	 
	 printf("입력 정수 : ");
	 
	 for(int i=0;i<4;i++){
	 	scanf("%d",&arr[i]);
		if (arr[i] % 2==1) {
			odd=odd+arr[i];
		  }
		else {
			even=even+arr[i];
		  }
	 } 
		printf("odd : %d\n",odd);
		printf("even : %d",even);
	
	return 0;
}
